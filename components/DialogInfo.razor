@using Syncfusion.Blazor.Popups

@* DialogInfo es un componente modal utilizado para mostrar información al usuario.
    Si se produce una acción indebida, este modal se mostrará con un mensaje descriptivo
    de lo que ocurre.*@

@* solo visible si isDialogVisible es true *@
<SfDialog MinHeight="180px" Width="350px" @bind-Visible="@isDialogVisible" IsModal="true">
    <DialogTemplates>
        <Header>
            @headerMensaje
        </Header>
        <Content>
            @mensaje
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="OK" OnClick="@OnDialogBtnClick" />
    </DialogButtons>
</SfDialog>

@code {
    //dialogContinueOperation recibe el parámetro headerMensaje, el cual es un string para escribir en el header del dialog
    [Parameter]
    public string headerMensaje { get; set; }
    //dialogComponent recibe el parámetro mensaje, el cual es un string para escribir en el body del dialog
    [Parameter]
    public string mensaje { get; set; }
    // asigna como valor inicial el si es visible en true
    [Parameter]
    public bool isDialogVisible { get; set; } = false;

    // método que le asigna a isDialogVisible el valor false
    private void OnDialogBtnClick()
    {
        // oculta dialog
        isDialogVisible = false;
    }
}
